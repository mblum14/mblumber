# OPTIONS
export HISTCONTROL=ignoredups

# misc
NO_COLOR='\e[0m'

# regular colors
BLACK='\e[0;30m'
RED='\e[0;31m'
GREEN='\e[0;32m'
YELLOW='\e[0;33m'
BLUE='\e[0;34m'
MAGENTA='\e[0;35m'
CYAN='\e[0;36m'
WHITE='\e[0;37m'

# bold colors
EBLACK='\e[1;30m'
ERED='\e[1;31m'
EGREEN='\e[1;32m'
EYELLOW='\e[1;33m'
EBLUE='\e[1;34m'
EMAGENTA='\e[1;35m'
ECYAN='\e[1;36m'
EWHITE='\e[1;37m'

# PS1
export PS1=$ERED"\u@\h "$EMAGENTA"\w\n"'$(git branch &>/dev/null;\
  if [ $? == 0 ]; then \
    echo ""; \
  else
    echo "'"$EBLACK"'\$'"$NO_COLOR"' "; \
  fi; \
)'

source ~/.dotfiles/Bash-Git-Prompt/git_remote_check.sh
source ~/.dotfiles/Bash-Git-Prompt/git_prompt.sh
